<%- include('/commom/header',{
  title:aboutList?aboutList.title:"海南昆仑体育文化股份有限公司",
  Keywords:aboutList?aboutList.keywords:"海南昆仑体育文化股份有限公司",
  companyDescription:aboutList?aboutList.companyDescription:"海南昆仑体育文化股份有限公司",
}) %>
<style>
  .dropdown-menu>.active>a,
  .dropdown-menu>.active>a:focus,
  .dropdown-menu>.active>a:hover {
    background-color: #D9201B;
  }
</style>
<%- include('/commom/banner') %>

<div class="content-full">
  <div class="content main-info">

    <%- include('/commom/column') %>
    <div class="content-right">
      <% if(!aboutList[0].type){ %>

      <% aboutList.forEach(item => { %>
      <div class="about">
        <% if(aboutList[0].aboutTitle){ %>
        <img src="/public/images/about_img.png" alt="">
        <% } %>
        <h5><%= aboutList[0].aboutTitle %></h5>
        <%- aboutList[0].content %>
      </div>
      <% }) %>

      <% }else{ %>

      <% if(aboutDroptypeList[0]){ %>
      <div role="presentation" class="dropdown">
        <a href="#" id="myTabDrop1" class="dropdown-toggle" data-toggle="dropdown">
          <%= aboutDroptypeList[0].dropContent %>
          <b class="caret"></b>
        </a>
        <ul class="dropdown-menu" role="menu" aria-labelledby="myTabDrop1">
          <% aboutDroptypeList.forEach(item =>{ %>
          <li><a href="#<%= item.id %>" tabindex="-1" data-toggle="tab"><%= item.dropContent %></a></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <% if(aboutList[0].dropType ==='4'){ %>
      <div class="about2-list tab-content">
        <% aboutDroptypeList.forEach(val =>{ %>
        <ul class="tab-pane fade in active <%= aboutDroptypeList[0] == val ?'in active':''; %> "
          id="<%= val.id %>">
          <% aboutList.forEach(item => { %>
          <% if(item.dropTypeId == val.id){ %>
          <li>
            <img src="<%= item.dropImage %>" alt="" class="about2-img">
            <div class="about2-right">
              <h3><%= item.aboutTitle %></h3>
              <%- item.content %>
            </div>
          </li>
          <% } %>
          <% }) %>
        </ul>
        <% }) %>
      </div>

      <% }else{ %>

      <div class="honor-main tab-content">
        <div class="honor-line"></div>
        <% if(aboutDroptypeList[0]){ %>
        <% aboutDroptypeList.forEach(val =>{ %>
        <ul class="tab-pane fade <%= aboutDroptypeList[0] == val ?'in active':''; %>" id="<%= val.id %>">
          <% aboutList.forEach(item => { %>
          <% if(item.dropTypeId == val.id){ %>
          <li class="honor-list">
            <i></i>
            <div class="honor-right">
              <img src="<%= item.dropImage %>" alt="" class="honor-img">
              <div class="honor-txt">
                <p class="honor-data"><%= item.created_at %></p>
                <h5><%= item.aboutTitle %></h5>
                <%- item.content %>
              </div>
            </div>
          </li>
          <% } %>
          <% }) %>
        </ul>
        <% }) %>
        <% }else{%>
        <ul>
          <% aboutList.forEach(item => { %>
          <li class="honor-list">
            <i></i>
            <div class="honor-right">
              <img src="<%= item.dropImage %>" alt="" class="honor-img">
              <div class="honor-txt">
                <p class="honor-data"><%= item.created_at %></p>
                <h5><%= item.aboutTitle %></h5>
                <%- item.content %>
              </div>
            </div>
          </li>
          <% }) %>
        </ul>
        <% } %>
      </div>

      <% } %>
      <% } %>
    </div>
  </div>
</div>

<%- include('/commom/serInfo') %>

<%- include('/commom/footer') %>

<script>
  $('a[data-toggle="tab"]').on('show.bs.tab', function (e) {
    var text = this.innerText;
    var span = `<b class="caret"></b>`;
    var ul = $(this).parents('ul.dropdown-menu');
    ul.find('li').attr('class', '');
    $('#myTabDrop1').html(text + span);
  })

  $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
    var text = this.innerText;
    if (text == '全部') {
      $('.tab-pane').attr('class', 'tab-pane fade in active');
    }
  })
</script>